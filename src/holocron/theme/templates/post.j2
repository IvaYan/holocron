{% extends 'page.j2' %}


{% block article_meta %}
written by {{ document.author }} on

<time datetime="{{ document.published.isoformat() }}">
  {{ document.published.strftime('%B %d, %Y') }}
</time>


{% if metadata.show_tags and document.tags %}
<div class="post-tags">
tagged with
{% for tag in document.tags %}
    <a href="{{ tag.url }}">#{{ tag.name }}</a>
    {%- if not loop.last -%}
        ,
    {% endif %}
{% endfor %}
</div>
{% endif %}

{% endblock %}
